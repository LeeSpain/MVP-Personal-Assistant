// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  clerkId   String   @unique
  email     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Profile
  name             String?
  bio              String?
  values           String[]
  topics           String[]
  communicationStyle String?
  meetingTimes     String?
  workHours        String?

  // Relations
  meetings      Meeting[]
  diaryEntries  DiaryEntry[]
  chatSessions  ChatSession[]
  contacts      Contact[]

  notifications Notification[]

  memories      Memory[]
  integrations  Integration[]
  pillarSettings PillarSetting[]
}

model Meeting {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  title       String
  description String?
  startTime   DateTime
  endTime     DateTime?
  status      String   @default("pending") // pending, confirmed, cancelled

  videoLink   String?
  googleEventId String?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
}

model DiaryEntry {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  type      String   // Reflection, Decision, Idea
  title     String
  content   String   @db.Text
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model ChatSession {
  id        String        @id @default(uuid())
  userId    String
  user      User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  summary   String?
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  
  messages  ChatMessage[]

  @@index([userId])
}

model ChatMessage {
  id        String      @id @default(uuid())
  sessionId String
  session   ChatSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  
  role      String      // user, assistant
  content   String      @db.Text
  timestamp DateTime    @default(now())

  @@index([sessionId])
}

model Contact {
  id             String   @id @default(uuid())
  userId         String
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  name           String
  company        String?
  role           String?
  tags           String[]
  
  primaryChannel String?
  email          String?
  phone          String?
  whatsapp       String?
  slack          String?
  teams          String?
  address        String?
  notes          String?  @db.Text
  
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([userId])
}

model Notification {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  message   String
  read      Boolean  @default(false)
  
  createdAt DateTime @default(now())

  @@index([userId])
}

model Memory {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  content   String   @db.Text
  type      String   // fact, preference, context
  tags      String[]
  
  // Vector embedding (stored as array of floats)
  embedding Float[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}


model Integration {
  id           String   @id @default(uuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  provider     String   // "google"
  accessToken  String?  @db.Text
  refreshToken String?  @db.Text
  expiresAt    BigInt?
  email        String?

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([userId, provider])
  @@index([userId])
}

model PillarSetting {
  id                 String   @id @default(uuid())
  userId             String
  user               User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // 'deepWork' | 'execution' | 'relationship' | 'recovery'
  key                String
  name               String
  enabled            Boolean  @default(true)
  dailyTargetMinutes Int?
  description        String?

  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@unique([userId, key])
  @@index([userId])
}
